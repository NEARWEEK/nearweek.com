{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "article",
    "pluralName": "news",
    "displayName": "News",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Body": {
      "type": "richtext",
      "required": true
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category"
    },
    "Image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "Likes": {
      "type": "integer",
      "default": 0
    },
    "Views": {
      "type": "integer",
      "default": 0
    }
  }
}
